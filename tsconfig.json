{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2022"],
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "isolatedModules": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true,
    "inlineSourceMap": true
  },
  "include": ["src"]
}
